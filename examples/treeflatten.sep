predicate tree(loc x, set s) {
|  x == null    |=> {s =i {}; emp;}
|  !(x == null) |=> {s =i {v} ++ sa ++ sb; [x, 3] | <x, 0> -> v | <x, 1> -> l | <x, 2> -> r | tree(l, sa) | tree(r, sb);}
}

predicate lseg(loc x, set s) {
|  x == null    |=> {s =i {}; emp;}
|  !(x == null) |=> {s =i {v} ++ ss; [x, 2] | <x, 0> -> v | <x, 1> -> nxt | lseg(nxt, ss);}
}

{true; lseg(xa, sa) | lseg(xb, sb) | ret -> xb;}
lsegappend (loc xa, loc ret)
{s =i sa ++ sb; lseg(y, s) | ret -> y;}

{true; <z, 0> -> x | tree(x, s)}
flatten(loc z)
{true; <z, 0> -> y | lseg(y, s)}
